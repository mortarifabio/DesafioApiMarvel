<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DesafioWebServices" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryVariant">@color/dark_red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_blue</item>
        <item name="colorSecondaryVariant">@color/medium_blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:background">@color/dark_blue</item>
    </style>

    <style name="LoginCardBody">
        <item name="android:background">@drawable/bg_login_card_body_night</item>
        <item name="android:padding">@dimen/margin_default</item>
    </style>

    <style name="TextInputLayoutDefault">
        <item name="boxBackgroundColor">@color/dark_blue</item>
    </style>

</resources>